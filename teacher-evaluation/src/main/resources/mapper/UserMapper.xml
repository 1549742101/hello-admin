<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
	namespace：命名空间，其值为某一个dao层类的具体路径
	id          | int                    | 用户标识                       |
  | login_name  | varchar(20)            | 用户工号                       |
  | management  | int           | 账号管理（暂停、禁用、开启）   |
  | user_name   | varchar(20)            | 用户名                         |
  | login_pass  | varchar(100)           | 用户密码                       |
  | user_phone  | int                    | 中间表id（改动）               |
  | college_id  | int                    | 一个用户绑定一个学院（多对一） |
  | create_man   | varchar                | 创建者（待定）                 |
  | create_time  | datetime               | 创建时间（待定）               |
  | change_time | datetime               | 改动时间（待定）               |
  | del_logic  /int             |是否逻辑上删除（待定）
  login_name,management,user_name,login_pass,user_phone,college_id,create_man,create_time,change_time,del_logic
 -->
<mapper namespace="top.glkj.teacherEvaluation.mapper.UserMapper">
    <select id="getUserByName" parameterType="string" resultType="top.glkj.teacherEvaluation.bean.User">
	    SELECT * FROM user WHERE login_name = #{loginName} and del_logic != 1 limit 1;
    </select>
    <select id="getAllUser" resultType="top.glkj.teacherEvaluation.bean.User">
        SELECT * FROM user;
    </select>
    <select id="getUsersByUserName" resultType="top.glkj.teacherEvaluation.bean.User">
        SELECT * FROM user user_name like concat('%',#{name},'%');
    </select>
    <select id="getUsersByLoginName" resultType="top.glkj.teacherEvaluation.bean.User">
        SELECT * FROM user where login_name like concat('%',#{name},'%');
    </select>
    <select id="getUsersByDate" resultType="top.glkj.teacherEvaluation.bean.User">
        SELECT * FROM user where create_time between #{param1} and #{param2}
    </select>

    <insert id="addUser" parameterType="top.glkj.teacherEvaluation.bean.User">
        INSERT INTO user
        (login_name,management,user_name,login_pass,user_phone,college_id,create_man,create_time,del_logic)
        VALUE (#{loginName},#{management},#{userName},#{loginPass},#{userPhone},#{collegeId},#{createMan}
        ,#{createTime},#{delLogic}
        );
    </insert>


    <update id="updateUser" parameterType="top.glkj.teacherEvaluation.bean.User">
        UPDATE user SET
        login_name = #{loginName}
        ,management = #{management}
        ,user_name = #{userName}
        ,user_phone = #{userPhone}
        ,college_id = #{collegeId}
        ,del_logic = #{delLogic}
        ,change_time = CURRENT_TIMESTAMP
        where id = #{id};
    </update>
    <update id="updateUserPassWord">
         UPDATE user SET login_pass = #{param2},change_time = CURRENT_TIMESTAMP where id = #{param1};
    </update>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM user WHERE id = #{id};
    </delete>
    <update id="removeUserById">
        UPDATE  user SET (del_logic = 1) where id = #{id}
    </update>
</mapper>