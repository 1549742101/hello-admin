<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
	namespace：命名空间，其值为某一个dao层类的具体路径
 -->
<mapper namespace="top.glkj.teacherEvaluation.mapper.UserMapper">
    <select id="getUerByName"  parameterType="string" resultType="top.glkj.teacherEvaluation.bean.User">
	SELECT * FROM user WHERE login_name = #{loginName}
    </select>

    <insert id="insertUserByName" parameterType="top.glkj.teacherEvaluation.bean.User">
        INSERT INTO user(login_name,user_name,login_pass) VALUE (#{loginName},#{userName},#{passWord})
    </insert>

    <update id="updateUserByName" parameterType="top.glkj.teacherEvaluation.bean.User">
        UPDATE user SET (login_name = #{loginName},user_name = #{userName},login_pass = #{passWord}) where id = #{id}
    </update>

    <delete id="deleteUser">
    DELETE FROM user WHERE id = #{id}
    </delete>
</mapper>