<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
	namespace：命名空间，其值为某一个dao层类的具体路径
 -->
<mapper namespace="top.glkj.teacherEvaluation.mapper.PermissionMapper">
    <resultMap id="BasePermission" type="top.glkj.teacherEvaluation.bean.Permission">
        <id column="id" property="id"></id>
        <result column="name" property="perName"></result>
        <result column="description" property="description"></result>
    </resultMap>
    <select id="selectPermission"  parameterType="int" resultMap="BasePermission">
            SELECT p.id,
                   p.name,
                   p.description
			       FROM permission as p LEFT JOIN user_per as u  on p.id = u.permissions_id WHERE u.user_id = #{id};
    </select>

