<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
	namespace：命名空间，其值为某一个dao层类的具体路径
 -->
<mapper namespace="top.glkj.teacherEvaluation.mapper.EvaluationTypeMapper">
    <resultMap id="BaseEvaluationType" type="top.glkj.teacherEvaluation.bean.EvaluationType">
        <id column="id" property="id"></id>
        <result column="name" property="evaName"></result>
        <result column="permissions_id" property="permissionsId"></result>
        <result column="sort" property="sort"></result>
        <result column="weights" property="weights"></result>
        <result column="start_time" property="startTime"></result>
        <result column="end_time" property="endTime"></result>
    </resultMap>
    <select id="getEvaluationType" parameterType="int" resultMap="BaseEvaluationType">
        SELECT * FROM evaluation_type
    </select>

    <select id="getEvaluationTypeById"  parameterType="int" resultMap="BaseEvaluationType">
	SELECT * FROM evaluation_type WHERE id = #{id}
    </select>

    <insert id="addEvaluationType" parameterType="top.glkj.teacherEvaluation.bean.EvaluationType">
        INSERT INTO evaluation_type(name,permissions_id,sort,weights,start_time,end_time) VALUE (#{evaName},#{permissionsId},#{sort},#{weights},#{startTime},#{endTime})
    </insert>

    <update id="updateEvaluationTypeById" parameterType="top.glkj.teacherEvaluation.bean.EvaluationType">
        UPDATE evaluation_type SET (name = #{evaName},permissions_id = #{permissionsId},sort = #{sort},weights = #{weights},start_time = #{startTime},},end_time = #{endTime})
        where id = #{id}
    </update>

    <delete id="deleteEvaluationType">
    DELETE FROM evaluation_type WHERE id = #{id}
    </delete>
</mapper>